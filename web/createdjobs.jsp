                                            <th>Company</th>
                                            <th>Category</th>
                                            <th>Deadline</th>
                                            <th>Status</th>
                                            <th>Applicants</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>Tittle</th>
                                            <th>Company</th>
                                            <th>Category</th>
                                            <th>Deadline</th>
                                            <th>Status</th>
                                            <th>Applicants</th>
                                        </tr>
                                    </tfoot>
